<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
  </head>
  <body>
    <%- include('header')%>

    <div class="container" style="margin-top: 50px;">
      <div class="row">
          <h2>Password Category Lists</h2>
       <table class="table table-striped table-primary">
        <thead>
          <tr>
            <th>Password Category Name</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          
            <%if(records.length>0){
              records.forEach(function(row){
              %>
              <tr>
            <td><%=row.password_category%></td>
            <td><a class="btn btn-primary" href="/password-category/edit/<%=row._id%>">Edit</a>
              <a class="btn btn-danger" href="/password-category/delete/<%=row._id%>">Delete</a>
            </td>
          </tr>
            <%}) }%>
        </tbody>
      </table>
    </div>

    <% if(pages>0){%>
      <ul class="pagination">
        <% if(current==1){ %>
        <li class="disabled page-item"><a class="page-link">First</a></li>
        <% }else{ %>
        <li class="page-item"><a class="page-link" href="/password-category/1">First</a></li>
        <% } %>  
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
        <li class="disabled page-item"><a class="page-link">...</a></li>
          <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
          <% if (i == current) { %>
          <li class="active page-item"><a class="page-link"><%= i %></a></li>
          <% } else { %>
          <li class="page-item"><a class="page-link" href="/password-category/<%= i %>"><%= i %></a></  li>
          <% } %>
          <% if (i == Number(current) + 4 && i < pages) { %>
        <li class="disabled page-item"><a class="page-link">...</a></li>
          <% } %>
        <% } %>
        <% if (current == pages) { %>
        <li class="disabled page-item"><a class="page-link">Last</a></li>
        <% } else { %>
        <li class="page-item"><a class="page-link" href="/password-category/<%= pages %>">Last</a></li>
        <% } %>
      </ul>
      <% } %>




  </div>
  <%- include('footer')%>
  </body>
</html>
